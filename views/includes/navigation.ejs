<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active':'inactive' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/product-list' ? 'active':'inactive' %>" href="/products-list">Products</a></li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item"><a class="<%= path === '/cart' ? 'active':'inactive' %>" href="/cart">Cart</a></li>
            <li class="main-header__item"><a class="<%= path === '/orders' ? 'active':'inactive' %>" href="/orders">Orders</a></li>
            <li class="main-header__item"><a class="<%= path === '/admin/add-product' ? 'active':'inactive' %>" href="/admin/add-product">Add Product</a></li>
            <li class="main-header__item"><a class="<%= path === '/admin/products' ? 'active':'inactive' %>" href="/admin/products">Admin Products</a></li>
            <% } %>
            
            <% if (! isAuthenticated ) { %>
            <li class="main-header__item"><a class="<%= path === '/login' ? 'active':'inactive' %>" href="/login">Login</a></li>
            <!-- <li class="main-header__item"><form action="/logout" method="POST"><button type="submit">Logout</button></form></li> -->
            <% } else { %>
            <li class="main-header__item"><form action="/logout" method="POST"><button class="btn" type="submit">Logout</button></form></li>
            <% } %>
        </ul>
    </nav>
</header>