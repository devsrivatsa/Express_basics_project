<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for(let product of prods) { %>
                    <article class="card roduct-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product[0] %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product[1]%>" alt="<%= product[0] %>" height="100px" width="100px">
                        </div>
                        <div class="card__content">
                            <h2 class="product_price">$<%= product[2] %></h2>
                            <p class="product__description"><%= product[3] %></p>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href ="/products/<%= product.id %>">Details</a>
                            <form action="/add-to-cart" method="post">
                                <button class="btn">Add to Cart</button>
                            </form>
                            
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>